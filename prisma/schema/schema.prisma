generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins", "prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id   String @id @default(cuid())
  name String
  inn  String

  client   Client? @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId String?

  @@index([name, inn])
  @@map("companies")
}
